<!DOCTYPE html>
<html>
<head>
    <title>Adicionar pessoa</title>
    <%- include('../_layout/header') %>
</head>
<body>
    <div class="titulo">Adicionar pessoa</div>
    <div class="voltar"><a href="/pessoa/listar">Voltar</a></div>
    <br/>
    <center>
        <form name="form1" method="POST" action="/pessoa/editar?_method=PUT">
            <% if (typeof id != 'undefined') { %>
                <input type="hidden" name="id" value="<%=id%>">
            <% } %>           
            <table>
                <tr>
                    <td>Nome</td>
                    <td>
                        <% if (typeof nome != 'undefined') { %>
                            <input type="text" name="nome" value="<%=nome%>">
                        <% } %>
                    </td>
                </tr>
                <tr>
                    <td>Profiss√£o</td>
                    <td>
                        <select name="id_profissao">
                            <%for (var rest in profissoes){ var selected = ( profissoes[rest].id == id_profissao ) ? "selected" : ""; %>
                                <option value="<%=profissoes[rest].id%>" <%=selected %>><%=profissoes[rest].nome%></option>  
                            <%}%>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td><input type="submit" value="Salvar" ></td>
                </tr>
            </table>
        </form> 
    </center>
</div>
</body>
</html>